<%- include('header'); -%>
<div class="container">
    <div class="heading">
        <h1>ToDo List</h1>
        <i class="fa-solid fa-file-pen fa-xl" style="color: #ff7eb9;"></i>
    </div>
    <form method="submit" action="/todo">
        <input class="input" type="text" name="todo" placeholder="Yeni gÃ¶rev ekleyin...">
        <button class="add-btn" type="submit">Ekle</button>
    </form>
    <div class="todo-list">
        <ul>
            <% todos.forEach(todo=> { %>
            <li>
               <div class="todo-item">
                <label  class="round-checkbox"><input type="checkbox"><span></span></label>
                <label><%= todo.Name %></label>
               </div>
                <div class="todo-item-actions">
                <button class="edit-btn"> <i class="fa-solid fa-pen fa-xl" style="color: #ff7eb9;"></i></i></button>
                 <button class="delete-btn"><i class="fa-solid fa-trash fa-xl" style="color: #ff7eb9;"></i></button>
                </div>
            </li>
            <% }) %>    
        </ul>
    </div>
    <div class="bottom-btn">
        <button>Secilenleri Kaldir</button>
        <button>Tumunu Kaldir</button>
    </div>
</div>
<%- include('footer'); -%>